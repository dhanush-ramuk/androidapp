<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="8dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/rounded_corner_card"
        android:id="@+id/toolbarLabResult"
        android:layout_centerVertical="true"
        android:elevation="5dp"
        android:layout_marginBottom="2.5dp">

        <TextView
            android:id="@+id/blood_work_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/bloodWork"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:fontFamily="@font/nunito_extrabold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewForPdf"
        android:layout_below="@+id/toolbarLabResult"
        android:fillViewport="true"
        android:layout_marginBottom="75dp"
        android:padding="5dp"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <LinearLayout
            android:id="@+id/parent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:background="@drawable/rounded_corner_card"
            android:padding="3dp"
            >
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/parent_layout"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp"
            android:layout_gravity="bottom"
            android:background="@drawable/rounded_corner_card">

            <TextView
                android:id="@+id/doctorsCommentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/DoctorsCommentText"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:visibility="invisible">

            </TextView>

            <TextView
                android:id="@+id/doctorsComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="#000000"
                android:textSize="22sp">

            </TextView>
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/rounded_corner_card">
        <TextView
            android:id="@+id/alertForNextBloodWorkText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="#000000"
            android:textSize="20sp"
           />

    <TextView
        android:id="@+id/alert_for_next_bloodwork_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
    />
</LinearLayout>
    </LinearLayout>
</RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:id="@+id/okayButton"
    android:layout_alignParentEnd="true"
    android:onClick="backToMain"
    android:src="@drawable/tickmark_icon_light_48"
   />




    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/deleteButton"
        android:layout_alignParentStart="true"
        android:onClick="deleteResult"
        android:src="@drawable/trash_icon_light_48"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/track_icon_light_48"
      android:layout_centerHorizontal="true"

        android:onClick="gotoTrackPage"
        />
    </RelativeLayout>

</RelativeLayout>