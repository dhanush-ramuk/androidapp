<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DoctorsCommentRelativeLayout"
        android:elevation="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/rounded_corner"
        android:text="@string/DoctorsCommentText"
        android:id="@+id/DoctorsComment"
        android:elevation="10dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:textColor="#ffffff"
        android:padding="2dp"
        app:fontFamily="sans-serif-condensed"
        android:layout_alignParentTop="true">
    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/DoctorsComment"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:maxLength="150"
        android:padding="5dp"
        android:background="@drawable/doctors_comment_edittext"
        android:hint="Any important notes from doctor...?"
        android:id="@+id/DoctorsCommentEditText"
        >
    </EditText>
        <Button
            android:id="@+id/okButtonComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok_button_basic_lab"
            android:textSize="15sp"
            android:layout_below="@id/DoctorsCommentEditText"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:onClick="setDoctorsComment"
            android:background="#00c853">

        </Button>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp"
        android:layout_below="@+id/DoctorsCommentRelativeLayout"
        android:id="@+id/ReminderRefill">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remind my next BloodWork"
            android:elevation="10dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_corner"
            android:padding="2dp"
            app:fontFamily="sans-serif-condensed"
            >
        </TextView>


        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radioButtonRefill"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">
            <RadioButton android:id="@+id/radio_pirates1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:onClick="onRadioButtonClicked"
                android:checked="true"/>
            <RadioButton android:id="@+id/radio_ninjas1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:onClick="onRadioButtonClicked"/>
        </RadioGroup>

    </LinearLayout>
    <DatePicker
        android:id="@+id/simpleDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_corner_datepicker"
        android:elevation="10dp"
        android:visibility="invisible"
        android:calendarViewShown="false"
        android:layout_below="@id/ReminderRefill"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/simpleDatePicker"
                android:id="@+id/timeNoteLinearLayout"
                android:visibility="invisible"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/smallinfoicon"
                    android:layout_marginTop="3dp"
                    android:scaleType="center"
                    android:adjustViewBounds="true">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You will get remainder on the morning 08:30"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp">
                </TextView>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="closeActivity"
            android:backgroundTint="#d50000"
            android:src="@drawable/baseline_clear_white_48dp" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_back_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:onClick="backToMedicationReminderSettings"
            android:src="@drawable/baseline_done_white_48dp"
            android:backgroundTint="#00c853"/>
    </RelativeLayout>

</RelativeLayout>