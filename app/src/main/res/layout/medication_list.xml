<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/medicationListLayout">

    <TextView
        android:id="@+id/tablet_name_text"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/time1_text"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/tablet_name_text"
        android:layout_toRightOf="@+id/tablet_name_text"
        android:text="TextView" />

    <TextView
        android:id="@+id/time2_text"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/time1_text"
        android:layout_toRightOf="@+id/time1_text"
        android:text="TextView" />

    <TextView
        android:id="@+id/time3_text"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/time2_text"
        android:layout_toRightOf="@+id/time2_text"
        android:text="TextView" />

    <TextView
        android:id="@+id/tablet_remaining_text"
        android:layout_width="210dp"
        android:layout_height="35dp"
        android:layout_below="@+id/time1_text"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tablet_name_text"
        android:layout_toRightOf="@+id/tablet_name_text"
        android:text="TextView" />
</RelativeLayout>