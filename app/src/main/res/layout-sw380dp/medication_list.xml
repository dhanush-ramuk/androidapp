<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/medicationListLayout"
    android:background="@color/medicationThird"
    android:elevation="20dp"
    android:padding="2dp"
    >

    <TextView
        android:id="@+id/tablet_name_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif-smallcaps" />

    <TextView
        android:id="@+id/time1_text"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tablet_name_text"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#37474F"
        android:textSize="21sp"
        app:fontFamily="sans-serif-smallcaps" />

    <TextView
        android:id="@+id/time2_text"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tablet_name_text"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/time1_text"
        android:layout_toRightOf="@+id/time1_text"
        android:gravity="center"
        android:textColor="#37474F"
        android:textSize="21sp"
        app:fontFamily="sans-serif-smallcaps" />

    <TextView
        android:id="@+id/time3_text"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tablet_name_text"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/time2_text"
        android:layout_toRightOf="@+id/time2_text"
        android:gravity="center"
        android:textColor="#37474F"
        android:textSize="21sp"
        app:fontFamily="sans-serif-smallcaps" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/delete_button_medication_list"
        android:drawableTop="@drawable/delete24" />


</RelativeLayout>