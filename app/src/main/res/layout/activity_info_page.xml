<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".infoPage">

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="App name"
        android:textColor="@color/labTextHeading"
        android:textSize="30dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appName"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Version 1.0" />

    <ImageView
        android:id="@+id/appImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/textView3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/splash_screen_app_icon"
        android:maxWidth="2500dp"
        android:maxHeight="250dp"
        android:minWidth="200dp"
        android:minHeight="200dp">

    </ImageView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/feedback"
        android:id="@+id/upcominf_features"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming Features"
            android:textColor="@color/labText"
            android:textSize="20sp"
            android:id="@+id/workingId">
        </TextView>

        <TextView
            android:id="@+id/updownButton"
            android:layout_width="24dp"
            android:layout_height="28dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@+id/workingId"
            android:background="#fafafa"
            android:drawableTop="@drawable/down"
            android:onClick="show"
            android:paddingTop="3dp">

        </TextView>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/featuresList"
    android:visibility="gone"
    android:layout_below="@id/workingId">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save your BloodWork as PDF"
            android:padding="2dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Remainder to refill your pills">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Doctor's comment section">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Snooze in Medication Notification">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="UI enhancements. And yes, Dark theme.">

        </TextView>

</LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/appImage"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:id="@+id/switch_layout">


        <Switch
            android:id="@+id/simpleSwitch"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SIunitissettext"
            android:checked="true"
            android:switchPadding="5dp"
            android:text="Traditional Unit"
            android:textColor="@color/labText"
            android:textSize="20dp"
            android:textStyle="normal"
            android:theme="@style/SCBSwitch" />
    <TextView
        android:id="@+id/SIunitissettext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:text="[(mg/dl),(u/l), etc.]">
    </TextView>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="For Feedback"
            android:textColor="#2B2525"
            android:textSize="26dp"
            app:fontFamily="sans-serif-smallcaps">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableTop="@drawable/email_icon"
                android:onClick="email">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableTop="@drawable/twitter_icon"
                android:onClick="twitter">

            </TextView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"

        android:onClick="icons8"
        android:text="icons downloaded from ICONS8"
        android:textColor="#303F9F"
        android:textSize="10sp"
        android:textStyle="italic">

    </TextView>

</RelativeLayout>