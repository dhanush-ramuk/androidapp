<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DoctorsCommentRelativeLayout">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/DoctorsCommentText"
        android:id="@+id/DoctorsComment"
        android:layout_alignParentTop="true">
    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DoctorsComment"
        android:hint="Your text goes here!"
        android:id="@+id/DoctorsCommentEditText"
        >

    </EditText>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of the Current BllodWork"
        android:textColor="@color/medicationText"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/DoctorsCommentRelativeLayout"
        app:fontFamily="sans-serif-condensed"
        android:id="@+id/DatePickerText">
    </TextView>
    <DatePicker
        android:id="@+id/BloodWorkDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:layout_below="@+id/DatePickerText"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_corner_datepicker"
        android:elevation="10dp"
        android:calendarViewShown="false"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp"
        android:layout_below="@+id/BloodWorkDatePicker"
        android:id="@+id/ReminderRefill">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remind me on my next BloodWork"
            android:textColor="@color/medicationText"
            android:textSize="24sp"
            android:textStyle="bold"
            app:fontFamily="sans-serif-condensed"
            >
        </TextView>


        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radioButtonRefill">
            <RadioButton android:id="@+id/radio_pirates1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:onClick="onRadioButtonClicked"
                android:checked="true"/>
            <RadioButton android:id="@+id/radio_ninjas1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:onClick="onRadioButtonClicked"/>
        </RadioGroup>

    </LinearLayout>
    <DatePicker
        android:id="@+id/simpleDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_corner_timepicker"
        android:elevation="10dp"
        android:visibility="invisible"
        android:calendarViewShown="false"
        android:layout_below="@id/ReminderRefill"/>


    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="closeActivity"
            android:backgroundTint="#d50000"
            android:src="@drawable/baseline_clear_white_48dp" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_back_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:onClick="backToMedicationReminderSettings"
            android:src="@drawable/baseline_done_white_48dp"
            android:backgroundTint="#00c853"/>
    </RelativeLayout>

</RelativeLayout>